<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="25dp"
    android:background="#3B3B3B">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"

        android:textColor="#D1D1D1"
        android:text="Adam's Calculator"
        android:textSize="52dp"
        android:fontFamily="@font/frontpageneue"/>

    <EditText
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:ems="10"
        android:hint="Result"
        android:inputType="textPersonName"
        android:textStyle="bold"
        android:textSize="50dp"
        android:textAlignment="viewEnd"
        android:textColor="#FFFFFF"
        android:background="#4D4D4D"
        android:padding="7dp"
        android:fontFamily="@font/digital_7" />

    <Button
        android:id="@+id/btnAC"
        android:layout_width="171dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="223dp"
        android:layout_marginLeft="2dp"

        android:backgroundTint="#A36C2E"
        android:text="AC"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/btnAC"
        android:layout_toEndOf="@+id/btnAC"
        android:layout_marginLeft="10dp"

        android:backgroundTint="@color/teal_700"
        android:text="/"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btnMult"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/btnAC"
        android:layout_toEndOf="@+id/btnDiv"
        android:layout_marginLeft="10dp"

        android:backgroundTint="@color/teal_700"
        android:text="X"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btnAC"
        android:layout_marginLeft="2dp"

        android:backgroundTint="@color/black"
        android:text="7"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btnAC"
        android:layout_toEndOf="@+id/btn7"
        android:layout_marginLeft="10dp"

        android:backgroundTint="@color/black"
        android:text="8"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btnAC"
        android:layout_toEndOf="@+id/btn8"
        android:layout_marginLeft="10dp"

        android:backgroundTint="@color/black"
        android:text="9"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btnSubt"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btnAC"
        android:layout_toEndOf="@+id/btn9"
        android:layout_marginLeft="10dp"

        android:backgroundTint="@color/teal_700"
        android:text="-"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btn7"
        android:layout_marginLeft="2dp"

        android:backgroundTint="@color/black"
        android:text="4"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btn7"
        android:layout_toEndOf="@+id/btn4"
        android:layout_marginLeft="10dp"

        android:backgroundTint="@color/black"
        android:text="5"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btn7"
        android:layout_toEndOf="@+id/btn5"
        android:layout_marginLeft="10dp"

        android:backgroundTint="@color/black"
        android:text="6"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btn7"
        android:layout_toEndOf="@+id/btn9"
        android:layout_marginLeft="10dp"

        android:backgroundTint="@color/teal_700"
        android:text="+"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btn4"
        android:layout_marginLeft="2dp"

        android:backgroundTint="@color/black"
        android:text="1"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btn4"
        android:layout_toEndOf="@+id/btn1"
        android:layout_marginLeft="10dp"

        android:backgroundTint="@color/black"
        android:text="2"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btn4"
        android:layout_toEndOf="@+id/btn2"
        android:layout_marginLeft="10dp"

        android:backgroundTint="@color/black"
        android:text="3"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="80dp"
        android:layout_height="140dp"
        android:layout_below="@+id/btn4"
        android:layout_toEndOf="@+id/btn9"
        android:layout_marginLeft="10dp"

        android:backgroundTint="#FF8800"
        android:text="="
        android:textSize="35sp" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="171dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btn1"
        android:layout_marginLeft="2dp"

        android:backgroundTint="@color/black"
        android:text="0"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btnDot"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btn3"
        android:layout_toEndOf="@+id/btn0"
        android:layout_marginLeft="10dp"

        android:backgroundTint="@color/black"
        android:text="."
        android:textSize="35sp" />

</RelativeLayout>